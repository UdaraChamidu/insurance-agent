// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Intake Fields
  productType String? // Medicare, ACA, Life, etc.
  state       String? // e.g. FL
  triggers    Json?   // JSON object for triggers { turning65: true, moved: false }
  
  // Contact Info
  firstName   String?
  lastName    String?
  email       String?
  phone       String?

  // Marketing / Tracking
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  utmTerm     String?
  utmContent  String?
  
  // Relations
  session     Session?
}

model Session {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  leadId      String   @unique
  lead        Lead     @relation(fields: [leadId], references: [id])
  
  // Call State
  status      String   @default("new") // 'new', 'active', 'completed'
  startTime   DateTime?
  endTime     DateTime?
  
  // Outcome (Wrap Up)
  disposition String?  // 'booked', 'quoted', 'ni', 'follow-up'
  notes       String?  // Agent manual notes
  planName    String?  // Plan sold/quoted
  premium     String?  // Premium amount
  
  // External Integrations
  ghlContactId String? // ID in GoHighLevel
  
  // Relations
  transcripts Transcript[]
}

model Transcript {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  
  role      String   // 'agent', 'customer', 'ai'
  content   String   // The text spoken/generated
  timestamp DateTime @default(now())
}
